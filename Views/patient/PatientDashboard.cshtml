@model dynamic
@{
    ViewData["Title"] = "Patient Dashboard";
    Layout = "_PatientLayout";
}
<div class="container-fluid px-4">
    <div class="hospital-overview text-center mb-5 animate__animated animate__fadeIn">
        <h2 class="text-primary">Welcome to Your Health Hub</h2>
        <p class="lead text-muted">Manage your care with ease and stay connected with our team.</p>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4 mb-5">
        <div class="col">
            <div class="card dashboard-card bg-info text-white animate__animated animate__fadeInUp animate__delay-1s">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Appointments</h5>
                            <h2 class="mb-0">2</h2>
                        </div>
                        <i class="fas fa-calendar-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card dashboard-card bg-success text-white animate__animated animate__fadeInUp animate__delay-2s">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Lab Results Available</h5>
                            <h2 class="mb-0">4</h2>
                        </div>
                        <i class="fas fa-file-medical-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card dashboard-card bg-warning text-white animate__animated animate__fadeInUp animate__delay-3s">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Pending Bills</h5>
                            <h2 class="mb-0">$300</h2>
                        </div>
                        <i class="fas fa-receipt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card dashboard-card bg-danger text-white animate__animated animate__fadeInUp animate__delay-4s">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Prescriptions</h5>
                            <h2 class="mb-0">1</h2>
                        </div>
                        <i class="fas fa-prescription-bottle-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        <div class="col">
            <div class="card dashboard-card h-100 animate__animated animate__fadeInLeft">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-calendar-check me-2"></i>Appointments</h5>
                    <p class="card-text">Schedule and manage your medical appointments.</p>
                    <a asp-action="Reservations" class="btn btn-primary">View Appointments</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card dashboard-card h-100 animate__animated animate__fadeInLeft animate__delay-1s">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-file-medical me-2"></i>Medical Records</h5>
                    <p class="card-text">Access your complete medical history.</p>
                    <a asp-action="Medicals" class="btn btn-primary">View Records</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card dashboard-card h-100 animate__animated animate__fadeInLeft animate__delay-2s">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-prescription me-2"></i>Prescriptions</h5>
                    <p class="card-text">View and manage your medications.</p>
                    <a asp-action="Prescriptions" class="btn btn-primary">View Prescriptions</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card border-0 shadow animate__animated animate__fadeInUp">
        <div class="card-header bg-white border-0">
            <h3 class="mb-0 text-primary">Patient Quick Guides</h3>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="guide-card p-3 animate__animated animate__pulse animate__delay-1s">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar-plus me-3 text-primary fs-4"></i>
                            <span>How to Book an Appointment</span>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="guide-card p-3 animate__animated animate__pulse animate__delay-2s">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-file-medical me-3 text-success fs-4"></i>
                            <span>Access Medical Reports</span>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="guide-card p-3 animate__animated animate__pulse animate__delay-3s">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-pills me-3 text-danger fs-4"></i>
                            <span>Understanding Prescriptions</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>