@model Hospital_Administration_System.ViewModels.Department.DepartmentCreateVM

@{
    ViewData["Title"] = "Create New Department";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-clinic-medical me-2"></i>@ViewData["Title"]
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <fieldset>
                <legend class="text-success fw-semibold mb-4">
                    <i class="fas fa-info-circle me-2"></i>Department Details
                </legend>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-medium">
                            <i class="fas fa-building me-1"></i> Name
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Cardiology" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="BranchID" class="form-label fw-medium">
                            <i class="fas fa-hospital me-1"></i> Branch
                        </label>
                        <select asp-for="BranchID" class="form-select" asp-items="ViewBag.Branches">
                            <option value="">Select Branch</option>
                        </select>
                        <span asp-validation-for="BranchID" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HeadDoctorID" class="form-label fw-medium">
                            <i class="fas fa-user-md me-1"></i> Head Doctor
                        </label>
                        <select asp-for="HeadDoctorID" class="form-select" asp-items="ViewBag.Doctors">
                            <option value="">Not Assigned</option>
                        </select>
                        <span asp-validation-for="HeadDoctorID" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="AdditionalData" class="form-label fw-medium">
                            <i class="fas fa-info-circle me-1"></i> Additional Info
                        </label>
                        <textarea asp-for="AdditionalData" class="form-control" rows="3"
                                  placeholder="Specialization details, equipment information..."></textarea>
                        <span asp-validation-for="AdditionalData" class="text-danger small"></span>
                    </div>

                    <div class="col-12 d-flex justify-content-start gap-2 mt-3">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-plus-circle me-2"></i>Create Department
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
