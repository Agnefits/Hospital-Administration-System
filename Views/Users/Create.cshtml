@* Views/Users/Create.cshtml *@
@model Hospital_Administration_System.ViewModels.User.UserCreateVM
@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card border-0 shadow-lg">
    <div class="card-header bg-primary text-white py-3">
        <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i>@ViewData["Title"]</h4>
    </div>
	
    <div class="card-body">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-4">
                <!-- Basic Info -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <!-- Role Selection -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Role" class="form-label"></label>
                        <select asp-for="Role" class="form-select" id="roleSelect" required>
                            <option value="">Select Role</option>
                            <option value="Admin">Admin</option>
                            <option value="Doctor">Doctor</option>
                            <option value="Nurse">Nurse</option>
                            <option value="Pharmacist">Pharmacist</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>

                <!-- Dynamic Fields -->
                <div class="col-12" id="roleSpecificFields">
                    <!-- Doctor Fields -->
                    <div class="role-fields" data-role="Doctor">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FullName" class="form-label"></label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ContactNumber" class="form-label"></label>
                                    <input asp-for="ContactNumber" class="form-control" />
                                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DepartmentID" class="form-label"></label>
                                    <select asp-for="DepartmentID" class="form-select"
                                            asp-items="ViewBag.Departments">
                                        <option value="">Select Department</option>
                                    </select>
                                    <span asp-validation-for="DepartmentID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Specialization" class="form-label"></label>
                                    <input asp-for="Specialization" class="form-control" />
                                    <span asp-validation-for="Specialization" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Similar blocks for Nurse, Pharmacist, Admin -->
                </div>

                <div class="col-12">
                    <div class="d-flex gap-3 justify-content-end mt-4">
                        <button type="submit" class="btn btn-primary px-5">
                            <i class="fas fa-save me-2"></i>Create User
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-5">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Dynamic form field handling
        $(document).ready(function () {
            function toggleRoleFields() {
                const role = $('#roleSelect').val();
                $('.role-fields').hide();
                $(`[data-role="${role}"]`).show();
            }

            $('#roleSelect').change(toggleRoleFields);
            toggleRoleFields();
        });
    </script>
}