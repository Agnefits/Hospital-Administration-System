@{
    ViewData["Title"] = "Email Confirmation";
    Layout = "~/Views/Shared/_authLayout.cshtml";
}

<div class="card shadow-lg rounded-4 p-4 w-100">
    @if (ViewData["Success"] as bool? == true)
    {
        <div class="text-center">
            <div class="text-success mb-4">
                <i class="fas fa-check-circle fa-5x"></i>
            </div>
            <h3 class="text-white bg-success bg-opacity-75 rounded-3 py-2 mb-3">Email Confirmed!</h3>
            <p class="text-muted mb-4 fs-5">
                Your email address has been successfully verified.
            </p>
            <a asp-action="Login" class="btn btn-primary btn-lg px-5">
                Continue to Login
            </a>
        </div>
    }
    else
    {
        <div class="text-center">
            <div class="text-danger mb-4">
                <i class="fas fa-times-circle fa-5x"></i>
            </div>
            <h3 class="text-white bg-danger bg-opacity-75 rounded-3 py-2 mb-3">Email Confirmation Failed</h3>
            <p class="text-muted fs-5 mb-4">
                We couldn't verify your email address. This may be due to:
            </p>
            <ul class="list-unstyled text-start mx-auto mb-4 fs-6" style="max-width: 480px;">
                <li class="mb-2">
                    <i class="fas fa-exclamation-circle me-2 text-danger"></i>
                    The verification link has expired.
                </li>
                <li class="mb-2">
                    <i class="fas fa-exclamation-circle me-2 text-danger"></i>
                    The verification token is invalid.
                </li>
                <li>
                    <i class="fas fa-exclamation-circle me-2 text-danger"></i>
                    The user account doesn't exist.
                </li>
            </ul>
            <div class="d-grid gap-3 col-12 col-md-8 mx-auto">
                <a asp-action="Login" class="btn btn-outline-success btn-lg">
                    Return to Login
                </a>
                <a href="mailto:support@hospital.com" class="btn btn-link text-decoration-none text-success">
                    Contact Support
                </a>
            </div>
        </div>
    }
</div>
