@model IEnumerable<Billing>

@{
    ViewData["Title"] = "Billing";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Billing Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
         .hero-section { 
             background: linear-gradient(rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0.75)), url('/css/images/Prescriptions.jpg') center/cover no-repeat; 
             height: 35vh; 
             margin-bottom: 2rem; 
         } 

         .admin-table { 
             border-left: 4px solid #dc3545; 
             background: #fff; 
         } 

         .status-badge { 
             padding: 0.35rem 0.65rem; 
             border-radius: 1rem; 
             font-size: 0.85rem; 
         } 

         .badge-paid { 
             background-color: #d4edda; 
             color: #155724; 
         } 

         .badge-pending { 
             background-color: #fff3cd; 
             color: #856404; 
         } 
         .badge-overdue { 
             background-color: #f8d7da; 
             color: #721c24; 
         } 
         .export-btn-group .btn { 
             border-radius: 0.5rem; 
             transition: all 0.2s; 
         } 

         @@media (max-width: 768px) { 
             .hero-section { 
                 height: 25vh; 
             }
             .display-4 {
                 font-size: 1.75rem; 
             } 
             .table-responsive { 
                 font-size: 0.875rem;
             }
         }
     </style>
 </head> 
 <body> 
     <div class="container-lg py-4"> 
         <!-- Hero Section --> 
         <header class="hero-section d-flex align-items-center"> 
             <div class="container text-center text-white"> 
                 <h1 class="display-4 mb-3">Administrative Billing</h1> 
                 <p class="lead d-none d-md-block">Full financial management and oversight</p> 
             </div> 
         </header> 

         <!-- Controls Section --> 
         <div class="d-flex flex-wrap justify-content-between align-items-center mb-4"> 
             <div> 
                 <h2 class="h4 mb-0">Financial Records</h2> 
                 <div class="status-legend mt-2"> 
                     <span class="badge bg-success me-2">Paid</span> 
                     <span class="badge bg-warning me-2">Pending</span> 
                     <span class="badge bg-danger">Overdue</span> 
                 </div> 
             </div> 

             <div class="export-btn-group mt-2 mt-md-0"> 
                 <a href="@Url.Action("Add", "Billing")" class="btn btn-primary">  
                     <i class="bi bi-plus-circle me-2"></i>New Bill  
                 </a> 
                 <button class="btn btn-outline-secondary"> 
                     <i class="bi bi-file-earmark-spreadsheet me-2"></i>Export 
                 </button> 
             </div> 
         </div> 

         <!-- Financial Summary Cards --> 
         <div class="row mb-4"> 
             <div class="col-md-4 mb-3"> 
                 <div class="card border-success"> 
                     <div class="card-body"> 
                         <h5 class="card-title">Total Revenue</h5> 
                         <h3 class="card-text text-success">$24,500</h3> 
                         <small class="text-muted">Last 30 days</small> 
                     </div> 
                 </div> 
             </div> 
             <div class="col-md-8"> 
                 <div class="card"> 
                     <div class="card-body"> 
                         <h5 class="card-title">Recent Activity</h5> 
                         <div class="d-flex justify-content-between"> 
                             <span>New Bills (7 days)</span> 
                             <strong>42</strong> 
                         </div> 
                         <div class="d-flex justify-content-between"> 
                             <span>Pending Payments</span> 
                             <strong class="text-warning">15</strong> 
                         </div> 
                     </div> 
                 </div> 
             </div> 
         </div> 

         <!-- Billing Table --> 
         <div class="table-responsive admin-table"> 
             <table class="table table-hover mb-0"> 
                 <thead class="table-dark"> 
                     <tr> 
                         <th>Bill ID <i class="bi bi-filter"></i></th> 
                         <th>Patient</th> 
                         <th>Branch</th> 
                         <th>Amount</th> 
                         <th>Date <i class="bi bi-arrow-down"></i></th> 
                         <th>Status</th> 
                         <th>Actions</th> 
                     </tr> 
                 </thead> 
                 <tbody> 
                     <tr> 
                         <td>#ADM-1001</td> 
                         <td>Mostafa Mohamed</td> 
                         <td>Main Branch</td> 
                         <td>$450.00</td> 
                         <td>2024-03-15</td> 
                         <td><span class="status-badge badge-paid">Paid</span></td> 
                         <td> 
                             <a href="#" class="btn btn-sm btn-outline-secondary"> 
                                 <i class="bi bi-pencil"></i> 
                             </a> 
                             <a href="#" class="btn btn-sm btn-outline-danger"> 
                                 <i class="bi bi-trash"></i> 
                             </a> 
                         </td> 
                     </tr> 
                     <tr> 
                         <td>#ADM-1002</td> 
                         <td>Salah Mohamed</td> 
                         <td>West Clinic</td> 
                         <td>$299.00</td> 
                         <td>2024-03-16</td> 
                         <td><span class="status-badge badge-overdue">Overdue</span></td> 
                         <td> 
                             <a href="#" class="btn btn-sm btn-outline-secondary"> 
                                 <i class="bi bi-pencil"></i> 
                             </a> 
                             <a href="#" class="btn btn-sm btn-outline-danger"> 
                                 <i class="bi bi-trash"></i> 
                             </a> 
                         </td> 
                     </tr> 
                 </tbody> 
             </table> 
         </div> 
     </div> 

        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>BillID</th>
                    <th>PatientID</th>
                    <th>TotalAmount</th>
                    <th>CreatedAt</th>
                    <th>Status</th>
                    <th>AdditionalData</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BillID</td>
                        <td>@item.PatientID</td>
                        <td>@item.TotalAmount</td>
                        <td>@item.CreatedAt</td>
                        <td>@item.Status</td>
                        <td>@item.AdditionalData</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> 
     
 </body> 
 </html> 
