@{
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Dashboard</title>
</head>
<body>
    <!-- Mobile Toggle Button -->
    <button class="btn btn-primary d-lg-none position-fixed"
            style="z-index: 1100; top: 1rem; left: 1rem"
            onclick="document.querySelector('.sidebar').classList.toggle('active')">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <h2 class="mb-0">
                <i class="fas fa-user-injured me-2"></i>
                Patient Portal
            </h2>
        </div>
        <nav class="nav flex-column mt-3">
            <a class="nav-link active" href="Overview">
                <i class="fas fa-home me-2"></i>Overview
            </a>
            <a class="nav-link" href="Appointments">
                <i class="fas fa-calendar-check me-2"></i>Appointments
            </a>
            <a class="nav-link" href="Medical History">
                <i class="fas fa-file-medical me-2"></i>Medical History
            </a>
            <a class="nav-link" href="Prescriptions">
                <i class="fas fa-prescription me-2"></i>Prescriptions
            </a>
            <a class="nav-link" href="Billing">
                <i class="fas fa-file-invoice-dollar me-2"></i>Billing
            </a>
            <a class="nav-link" href="Our Doctors">
                <i class="fas fa-user-md me-2"></i>Our Doctors
            </a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container-fluid">
            <!-- Hospital Overview -->
            <div class="hospital-overview text-center">
                <h3>Welcome to Our Medical Center</h3>
                <p class="lead">Your health is our priority - 24/7 quality care</p>
            </div>

            <!-- Stats Cards -->
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4 mb-4">
                <div class="col">
                    <div class="card dashboard-card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">Appointments</h5>
                                    <h2 class="mb-0">2</h2>
                                </div>
                                <i class="fas fa-calendar-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card dashboard-card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">Lab Results Available</h5>
                                    <h2 class="mb-0">4</h2>
                                </div>
                                <i class="fas fa-file-medical-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card dashboard-card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">Pending Bills</h5>
                                    <h2 class="mb-0">$300</h2>
                                </div>
                                <i class="fas fa-receipt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card dashboard-card bg-danger text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">New Prescriptions</h5>
                                    <h2 class="mb-0">1</h2>
                                </div>
                                <i class="fas fa-prescription-bottle-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Guides Section -->
            <div class="card border-0 shadow">
                <div class="card-header bg-white border-0">
                    <h3 class="mb-0">Patient Quick Guides</h3>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="guide-card p-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-plus me-3 text-primary fs-4"></i>
                                    <span>How to Book an Appointment</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="guide-card p-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-file-medical me-3 text-success fs-4"></i>
                                    <span>Access Medical Reports</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="guide-card p-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-pills me-3 text-danger fs-4"></i>
                                    <span>Understanding Prescriptions</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>