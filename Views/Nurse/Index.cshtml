@{
    ViewData["Title"] = "Nurse Dashboard";
    Layout = "~/Views/Shared/_NurseLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nurse Dashboard</title>
</head>
<body>
    <!-- Main Content -->
    <main class="main-content">
        <div class="container-fluid">
            <h2 class="text-primary mb-4">
                <i class="fas fa-user-nurse me-2"></i>Welcome, Nurse
            </h2>

            <!-- Stats Cards -->
            <div class="row row-cols-1 row-cols-md-3 g-4 mb-4">
                <div class="col">
                    <div class="card dashboard-card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">Assigned Patients</h5>
                                    <h2 class="mb-0">10</h2>
                                </div>
                                <i class="fas fa-user-injured fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card dashboard-card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">Pending Tasks</h5>
                                    <h2 class="mb-0">5</h2>
                                </div>
                                <i class="fas fa-tasks fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card dashboard-card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title">Recent Appointments</h5>
                                    <h2 class="mb-0">3</h2>
                                </div>
                                <i class="fas fa-calendar-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Appointments Table -->
            <div class="card border-0 shadow">
                <div class="card-header bg-white border-0">
                    <h3 class="mb-0">Recent Appointments</h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Patient</th>
                                    <th>Doctor</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>John Doe</td>
                                    <td>Dr. Smith</td>
                                    <td>2025-03-20</td>
                                    <td>
                                        <span class="status-badge upcoming">Upcoming</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Jane Doe</td>
                                    <td>Dr. Williams</td>
                                    <td>2025-03-18</td>
                                    <td>
                                        <span class="status-badge completed">Completed</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>