@model IEnumerable<Reservation>
@{
    ViewData["Title"] = "My Reservations";
}

<div class="container">
    <h2 class="my-4">My Reservations</h2>

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Patient</th>
                    <th>Date/Time</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Patient?.FullName</td>
                        <td>@item.ReservationDate.ToString("g")</td>
                        <td>
                            <span class="badge @GetStatusBadge(item.Status)">
                                @item.Status
                            </span>
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="RedirectReservation"
                                   asp-route-id="@item.ReservationID"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-share"></i> Redirect
                                </a>

                                <form asp-action="UpdateReservationStatus" method="post" class="d-inline">
                                    <input type="hidden" name="ReservationID" value="@item.ReservationID" />
                                    <select name="ReservationStatus"
                                            class="form-select form-select-sm"
                                            onchange="this.form.submit()">
                                        @foreach (ReservationStatus status in Enum.GetValues(typeof(ReservationStatus)))
                                        {
                                            <option value="@status" selected="@(status == item.Status)">@status</option>
                                        }
                                    </select>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
    string GetStatusBadge(ReservationStatus status) => status switch
    {
        ReservationStatus.Pending => "bg-warning",
        ReservationStatus.Confirmed => "bg-success",
        ReservationStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };
}