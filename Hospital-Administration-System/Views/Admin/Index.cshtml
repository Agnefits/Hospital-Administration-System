@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeIn">
        <h2 class="text-primary"><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h2>
    </div>
    <div class="row g-4 mb-4">
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card card-stat bg-primary text-white h-100 animate__animated animate__fadeInUp">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Total Users</h5>
                            <h2 class="mb-0">150</h2>
                        </div>
                        <i class="stat-icon fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card card-stat bg-success text-white h-100 animate__animated animate__fadeInUp" style="animation-delay: 0.1s">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Total Doctors</h5>
                            <h2 class="mb-0">30</h2>
                        </div>
                        <i class="stat-icon fas fa-user-md fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card card-stat bg-warning text-white h-100 animate__animated animate__fadeInUp" style="animation-delay: 0.2s">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Appointments Today</h5>
                            <h2 class="mb-0">60</h2>
                        </div>
                        <i class="stat-icon fas fa-calendar-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card card-stat bg-danger text-white h-100 animate__animated animate__fadeInUp" style="animation-delay: 0.3s">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Pending Bills</h5>
                            <h2 class="mb-0">$4,500</h2>
                        </div>
                        <i class="stat-icon fas fa-file-invoice-dollar fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card border-0 shadow animate__animated animate__fadeInUp">
        <div class="card-header bg-white">
            <h3 class="mb-0 text-primary">Recent User Activities</h3>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>User</th>
                            <th>Role</th>
                            <th>Last Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="animate__animated animate__fadeIn">
                            <td data-label="User">Admin</td>
                            <td data-label="Role"><span class="badge bg-danger">Super Admin</span></td>
                            <td data-label="Last Active"><time datetime="2025-05-09">Today</time></td>
                            <td data-label="Actions">
                                <div class="d-flex gap-2 align-items-center">
                                    <span class="badge bg-success status-badge" data-bs-toggle="tooltip" title="Active session">
                                        <i class="fas fa-circle"></i>
                                    </span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-label="User actions">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#auditModal" data-user="Admin">
                                                    <i class="fas fa-history me-2"></i>View Activity
                                                </button>
                                            </li>
                                            <li>
                                                <button class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-user="Admin">
                                                    <i class="fas fa-trash-alt me-2"></i>Delete
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr class="animate__animated animate__fadeIn" style="animation-delay: 0.1s">
                            <td data-label="User">Dr. Smith</td>
                            <td data-label="Role"><span class="badge bg-primary">Doctor</span></td>
                            <td data-label="Last Active"><time datetime="2025-05-08">Yesterday</time></td>
                            <td data-label="Actions">
                                <div class="d-flex gap-2 align-items-center">
                                    <span class="badge bg-warning status-badge" data-bs-toggle="tooltip" title="Inactive for 1 day">
                                        <i class="fas fa-circle"></i>
                                    </span>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-label="User actions">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#disableModal" data-user="Dr. Smith">
                                                    <i class="fas fa-user-slash me-2"></i>Disable
                                                </button>
                                            </li>
                                            <li>
                                                <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#auditModal" data-user="Dr. Smith">
                                                    <i class="fas fa-history me-2"></i>View Activity
                                                </button>
                                            </li>
                                            <li>
                                                <button class="dropdown-item" data-bs-toggle="modal" data-bs-target="#editModal" data-user="Dr. Smith">
                                                    <i class="fas fa-edit me-2"></i>Edit
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Modals -->
<div class="modal fade" id="disableModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Disable User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Disabling <strong><span id="disableUserName"></span></strong> will:</p>
                <ul>
                    <li>Prevent system access</li>
                    <li>Preserve all records</li>
                    <li>Allow reactivation</li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Confirm Disable</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="auditModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Activity Audit - <span id="auditUserName"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="activity-timeline">
                    <p>Last login: 2025-05-09 14:30</p>
                    <p>Recent actions: 5 profile views</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong><span id="deleteUserName"></span></strong>? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Confirm Delete</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Edit details for <strong><span id="editUserName"></span></strong>.</p>
                <!-- Form fields would go here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#disableModal, #deleteModal, #auditModal, #editModal').on('show.bs.modal', function (e) {
                var userName = $(e.relatedTarget).data('user');
                $(this).find('#disableUserName, #deleteUserName, #auditUserName, #editUserName').text(userName);
            });
        });
    </script>
}