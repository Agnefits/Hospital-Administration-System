@model Hospital_Administration_System.ViewModels.Doctor.ReservationRedirectionVM
@{
    ViewData["Title"] = "Redirect Reservation";
    Layout = "_DoctorLayout";
}

<div class="container-fluid px-4">
    <h2 class="text-primary"><i class="fas fa-redo-alt me-2"></i>Redirect Reservation</h2>
    <div class="card">
        <div class="card-body">
            <form asp-action="RedirectReservation" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="OldReservationID" />

                <div class="mb-3">
                    <label class="form-label">Select Doctor</label>
                    <select asp-for="DoctorID" class="form-select" asp-items="@(new SelectList(ViewData["Doctors"] as IEnumerable<Doctor>, "DoctorID", "FullName"))">
                        <option value="">Select a doctor</option>
                    </select>
                    <span asp-validation-for="DoctorID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AdditionalData" class="form-label">Additional Notes</label>
                    <textarea asp-for="AdditionalData" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="AdditionalData" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Redirect Reservation</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}