@model Hospital_Administration_System.ViewModels.Branch.BranchEditVM

@{
    ViewData["Title"] = "Edit Branch";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-edit me-2"></i>@ViewData["Title"]
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="BranchID" />

            <fieldset>
                <legend class="text-warning fw-semibold mb-4">
                    <i class="fas fa-info-circle me-2"></i>Branch Details
                </legend>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-medium">
                            <i class="fas fa-building me-1"></i> Name
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Downtown Medical Center" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ContactNumber" class="form-label fw-medium">
                            <i class="fas fa-phone me-1"></i> Contact Number
                        </label>
                        <input asp-for="ContactNumber" class="form-control" placeholder="e.g., +1 555 123 4567" />
                        <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Location" class="form-label fw-medium">
                            <i class="fas fa-map-marker-alt me-1"></i> Location
                        </label>
                        <textarea asp-for="Location" class="form-control" rows="3" placeholder="Full branch address including city and zip code"></textarea>
                        <span asp-validation-for="Location" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="AdditionalData" class="form-label fw-medium">
                            <i class="fas fa-info-circle me-1"></i> Additional Info
                        </label>
                        <textarea asp-for="AdditionalData" class="form-control" rows="2" placeholder="Optional notes, specialties, or remarks"></textarea>
                        <span asp-validation-for="AdditionalData" class="text-danger small"></span>
                    </div>

                    <div class="col-12 d-flex justify-content-start gap-2 mt-3">
                        <button type="submit" class="btn btn-warning text-white px-4">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
